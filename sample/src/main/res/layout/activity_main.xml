<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".views.MainActivity">
	
	<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			tools:context=".views.MainActivity">
		
		<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/unsplash_implementation"
				android:textAlignment="center" />
		
		<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/tryUnsplashBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/try_unsplash"
				android:textAllCaps="false" />
		
		<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/value_30"
				android:text="@string/user_implementation"
				android:textAlignment="center" />
		
		<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/tryUserBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/try_user"
				android:textAllCaps="false" />
		
		<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/value_30"
				android:text="@string/same_image_implementation"
				android:textAlignment="center" />
		
		<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/trySameImageBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/try_same_image"
				android:textAllCaps="false" />
	</androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>