<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/value_5"
		android:clickable="true"
		android:focusable="true"
		android:foreground="?android:attr/selectableItemBackground"
		app:cardCornerRadius="@dimen/value_2"
		app:cardElevation="@dimen/value_2">
	
	<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		
		<com.onkarnene.android.medialoader.sample.views.widget.ResizableImageView
				android:id="@+id/unsplashImage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
		
		<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#EEEEEE"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:padding="@dimen/value_5">
			
			<androidx.appcompat.widget.AppCompatImageView
					android:id="@+id/unsplashUserProfileImage"
					android:layout_width="@dimen/value_35"
					android:layout_height="@dimen/value_35" />
			
			<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/value_10"
					android:layout_marginEnd="@dimen/value_10"
					android:layout_weight="1"
					android:orientation="vertical">
				
				<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/unsplashUserNameText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ellipsize="end"
						android:maxLines="1"
						android:text="@string/app_name"
						android:textColor="@android:color/black"
						android:textSize="@dimen/text_14" />
				
				<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/unsplashUserIdText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ellipsize="end"
						android:maxLines="1"
						android:text="@string/app_name"
						android:textColor="@android:color/secondary_text_light"
						android:textSize="@dimen/text_12" />
			
			</androidx.appcompat.widget.LinearLayoutCompat>
			
			<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/unsplashLikesText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:drawableStart="@drawable/ic_thumb_up_activated"
					android:drawablePadding="@dimen/value_5"
					android:maxLines="1"
					android:text="@string/default_likes"
					android:textColor="@android:color/tertiary_text_dark" />
		</androidx.appcompat.widget.LinearLayoutCompat>
	</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>